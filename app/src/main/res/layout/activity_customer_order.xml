<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_Order_Activity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:textAlignment="center"
        android:text="Shipping Details"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/customersShippingDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_margin="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:text="Shipping Details"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/customersEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:text="Email Address"
        android:layout_below="@+id/customersShippingDetails"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/customersName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customersEmail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Customers Name"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customersName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Discount Code"
        android:textAlignment="center"
        android:textSize="20sp" />


    <Button
        android:id="@+id/confirmOrder"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginLeft="120dp"
        android:text="Confirm"
        android:layout_below="@+id/discount"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="22sp" />






    </RelativeLayout>