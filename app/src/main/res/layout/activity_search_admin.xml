<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shopping"
    tools:context=".Search_Admin">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">


        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_box_input"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/boarders"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manusortasc"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:background="@drawable/goals_button_2"
        android:text="Manufacture Ascending"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/catsortasc"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="110dp"
        android:background="@drawable/goals_button_2"
        android:layout_below="@+id/linearLayout"
        android:textColor="@color/white"
        android:text="Category Ascending"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/titlesortasc"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="220dp"
        android:background="@drawable/goals_button_2"
        android:layout_below="@+id/linearLayout"
        android:textColor="@color/white"
        android:text="Title Ascending"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manusortdes"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manusortasc"
        android:layout_marginTop="10dp"
        android:background="@drawable/goals_button_1"
        android:text="Manufacture Descending"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/catsortdesc"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="110dp"
        android:background="@drawable/goals_button_1"
        android:layout_below="@+id/catsortasc"
        android:textColor="@color/white"
        android:text="Category Descending"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/titlesortdesc"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="220dp"
        android:background="@drawable/goals_button_1"
        android:layout_below="@+id/catsortasc"
        android:textColor="@color/white"
        android:text="Title Descending"/>


    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/shopping"
        android:id="@+id/recyclerView"
        android:layout_below="@id/manusortdes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"/>


</RelativeLayout>